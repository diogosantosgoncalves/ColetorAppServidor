<Window x:Class="ColetorAppServidor.Views.TelaPermissaoUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColetorAppServidor.Views"
        mc:Ignorable="d"
        Title="TelaCadastrarUsuario" Height="580" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Background="AliceBlue">
        <Label Content="Permissão de Usuário" FontSize="20" FontWeight="ExtraBlack"  Margin="100,0,70,20"/>
        <TextBox Name="txt_id" Visibility="Hidden" />
        <Label Content="Codigo Usuario: " />
        <TextBox Name="txt_CodigoUsuario" />
        <Label Content="Nome Usuario: " />
        <TextBox Name="txt_NomeUsuario" />

        <Label Content="Todas as Permissões" />
        <StackPanel Margin="10">
            <ComboBox Name="cb_setor" Text="Selecione" >
            </ComboBox>
        </StackPanel>
        <Button Click="bt_CadastrarPermissao" Content="Cadastrar Permissão" Name="bt_CadastrarUsuario" Width="170" Margin="20" />

        <StackPanel Margin="10">
            <Label Content="Permissões do Usuário Cadastradas" />
            <ListBox x:Name="lb_setores">

            </ListBox>
        </StackPanel>

    </StackPanel>
</Window>
