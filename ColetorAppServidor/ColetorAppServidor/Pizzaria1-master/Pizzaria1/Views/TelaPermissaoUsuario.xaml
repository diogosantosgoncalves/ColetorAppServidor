<Window x:Class="ColetorAppServidor.Views.TelaPermissaoUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColetorAppServidor.Views"
        mc:Ignorable="d"
        Title="TelaCadastrarUsuario" Height="350" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Background="AliceBlue">
        <Label Content="Permissão de Usuário" FontSize="20" FontWeight="ExtraBlack"  Margin="100,0,70,20"/>
        <TextBox Name="txt_id" Visibility="Hidden" />
        <Label Content="Nome Usuario: " />
        <TextBox Name="txt_NomeUsuario" />
        <Label Content="Codigo Usuario: " />
        <TextBox Name="txt_CodigoUsuario" />
        <Label Content="Inativo" />
        <CheckBox IsChecked="False" Name="txt_inativo" />
    
        <Button Content="Cadastrar" Name="bt_CadastrarUsuario" Width="150" Margin="20" />

    </StackPanel>
</Window>
